{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "types": ["@types/node"],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@vessel/config": ["libs/config/src"],
      "@vessel/config/*": ["libs/config/src/*"],
      "@vessel/database": ["libs/database/src"],
      "@vessel/database/*": ["libs/database/src/*"],
      "@vessel/common": ["libs/common/src"],
      "@vessel/common/*": ["libs/common/src/*"]
    }
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}
